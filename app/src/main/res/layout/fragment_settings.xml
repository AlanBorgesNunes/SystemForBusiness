<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SettingsFragment">

    <RelativeLayout
        android:id="@+id/rela_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/img_logo"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           app:civ_border_color="@color/seven"
           app:civ_border_width="1dp"
           android:src="@drawable/sua_logs"/>

        <TextView
            android:id="@+id/title_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:fontFamily="@font/nunito_bold"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/seven"
            android:text="Company Name!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_empresa"
            android:fontFamily="@font/nunito_extraight"
            android:gravity="center"
            android:text="Company Description!"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_top"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/btn_Schedule"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_corners_members"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_date_range_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Schedule"
                        android:textColor="@color/seven"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginHorizontal="70dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/btn_suppliers"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_corners_members"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_shopping_bag_24"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="suppliers"
                        android:textColor="@color/seven"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:backgroundTint="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/btn_storage"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corners_members"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_storage_24"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Estorage"
                        android:textColor="@color/seven"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/btn_catalog"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_corners_members"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_insert_service_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Catalog"
                        android:textColor="@color/seven"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginHorizontal="70dp"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/btn_workers"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_corners_members"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_supervisor_account_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="workers"
                        android:textColor="@color/seven"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:clickable="false"
                android:focusable="false"
                android:backgroundTint="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/btn_settings"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/shape_corners_members"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_settings_24"
                        app:civ_border_color="@color/seven"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="@color/seven"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_corners_members">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/sua_logs"
                app:civ_border_color="@color/seven"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Get your discount now of 40%!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/circleImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>




</RelativeLayout>